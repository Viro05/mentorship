# WordPress Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_NAME=mentorship_wp
DB_USER=root
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_CHARSET=utf8mb4
DB_COLLATE=utf8mb4_unicode_ci

# WordPress Configuration
WP_ENV=development
WP_HOME=http://localhost:8000
WP_SITEURL=http://localhost:8000
WP_DEBUG=true
WP_DEBUG_LOG=true
WP_DEBUG_DISPLAY=false
SCRIPT_DEBUG=true

# Security Keys (Generate new ones at https://api.wordpress.org/secret-key/1.1/salt/)
AUTH_KEY='put your unique phrase here'
SECURE_AUTH_KEY='put your unique phrase here'
LOGGED_IN_KEY='put your unique phrase here'
NONCE_KEY='put your unique phrase here'
AUTH_SALT='put your unique phrase here'
SECURE_AUTH_SALT='put your unique phrase here'
LOGGED_IN_SALT='put your unique phrase here'
NONCE_SALT='put your unique phrase here'

# WordPress Database Table Prefix
WP_TABLE_PREFIX=wp_

# WordPress Memory Limit
WP_MEMORY_LIMIT=256M

# File System Method
FS_METHOD=direct

# SSL Configuration
FORCE_SSL_ADMIN=false

# Cache Configuration
WP_CACHE=false
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Email Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_SECURE=tls
MAIL_FROM=noreply@yourdomain.com
MAIL_FROM_NAME='Mentorship Platform'

# API Keys
GOOGLE_MAPS_API_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=

# Social Media API Keys
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# Third-party Services
MAILCHIMP_API_KEY=
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Analytics
GOOGLE_ANALYTICS_ID=
FACEBOOK_PIXEL_ID=

# Content Delivery Network
CDN_URL=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# Backup Configuration
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_REMOTE_PATH=

# Performance Settings
ENABLE_GZIP=true
ENABLE_BROWSER_CACHING=true
MINIFY_HTML=false
MINIFY_CSS=false
MINIFY_JS=false

# Mentorship Specific Settings
MENTOR_APPROVAL_REQUIRED=true
SESSION_DURATION_MINUTES=60
MAX_SESSIONS_PER_MENTOR=10
PAYMENT_REQUIRED=false
COMMISSION_RATE=0.15

# Notification Settings
EMAIL_NOTIFICATIONS=true
SMS_NOTIFICATIONS=false
PUSH_NOTIFICATIONS=true

# Rate Limiting
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE='Site is under maintenance. Please check back later.'

# Logging
LOG_LEVEL=error
LOG_MAX_FILES=10

# Development Tools
ENABLE_QUERY_MONITOR=false
ENABLE_DEBUG_BAR=false
SAVE_QUERIES=false
