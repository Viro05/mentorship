{
  "name": "mentorship-wordpress",
  "version": "1.0.0",
  "description": "WordPress mentorship website development environment",
  "main": "index.php",
  "scripts": {
    "start": "php -S localhost:8000",
    "dev": "php -S localhost:8000 -t .",
    "setup": "./setup.sh",
    "db:create": "mysql -u root -p -e 'CREATE DATABASE IF NOT EXISTS mentorship_wp;'",
    "db:import": "mysql -u root -p mentorship_wp < database/backup.sql",
    "db:export": "mysqldump -u root -p mentorship_wp > database/backup.sql",
    "theme:watch": "sass --watch wp-content/themes/mentorship/assets/scss:wp-content/themes/mentorship/assets/css",
    "build": "npm run css:build && npm run js:build",
    "build:netlify": "npm run build && npm run build:static",
    "build:static": "node scripts/build-static.js",
    "css:build": "sass wp-content/themes/mentorship/assets/scss/style.scss wp-content/themes/mentorship/style.css --style compressed",
    "js:build": "webpack --mode production",
    "css:dev": "sass wp-content/themes/mentorship/assets/scss/style.scss wp-content/themes/mentorship/style.css --style expanded --source-map",
    "js:dev": "webpack --mode development --watch"
  },
  "keywords": [
    "wordpress",
    "mentorship",
    "php",
    "cms",
    "website"
  ],
  "author": "Your Name",
  "license": "GPL-2.0",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "mini-css-extract-plugin": "^2.7.6",
    "sass": "^1.69.0",
    "sass-loader": "^13.3.2",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "bootstrap": "^5.3.0",
    "jquery": "^3.7.1",
    "puppeteer": "^24.34.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "php": ">=7.4.0"
  },
  "repository": {
    "type": "git",
    "url": "."
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
